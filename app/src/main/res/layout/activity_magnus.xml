<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBE2E0"
    tools:context=".magnus">

    <Button
        android:id="@+id/newCardButton"
        android:layout_width="267dp"
        android:layout_height="82dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="724dp"
        android:layout_marginEnd="71dp"
        android:backgroundTint="#1E555C"
        android:text="Add a New Card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bttnSendSig"
        android:layout_width="265dp"
        android:layout_height="130dp"
        android:layout_marginStart="94dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="128dp"
        android:backgroundTint="#3A2E39"
        android:shape="rectangle"
        android:text="Send NFC Signal"
        app:layout_constraintBottom_toTopOf="@+id/newCardButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinnerCard"
        android:layout_width="242dp"
        android:layout_height="22dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="130dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/bttnSendSig"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="145dp"
        android:layout_height="46dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="133dp"
        android:text="NFCNinja"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="7dp"
        android:text="Recent used cards"
        app:layout_constraintBottom_toTopOf="@+id/spinnerCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>